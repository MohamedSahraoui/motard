<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/club_cover" />
        <ImageView
            android:id="@+id/imageClos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:clickable="true"
            android:padding="@dimen/space_16dp"
            android:layout_margin="4dp"/>

        <LinearLayout
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/space_4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_margin="@dimen/space_8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_title_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Club de motard"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/circularstd_black"
                            android:layout_marginVertical="2dp"
                            android:textSize="@dimen/text_size_large"/>
                        <TextView
                            android:id="@+id/tv_time_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_mini_title"
                            android:text="De 8:00h a 12:00h de 14:00h a 18:00h"
                            android:fontFamily="@font/circularstd_book"
                            android:layout_marginVertical="2dp"
                            android:textSize="@dimen/text_size_xmedium"/>
                        <TextView
                            android:id="@+id/nbr_participe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chef du club: Mr kousay "
                            android:textColor="@color/text_mini_title"
                            android:fontFamily="@font/circularstd_book"
                            android:layout_marginVertical="2dp"
                            android:textSize="@dimen/text_size_xmedium"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:id="@+id/btn_participe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/img_participe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/participer_inactif"/>
                        <TextView
                            android:id="@+id/tv_participer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inscription"
                            android:textAllCaps="true"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/circularstd_bold"
                            android:layout_margin="@dimen/space_4dp"
                            android:textSize="@dimen/text_size_xmedium"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutArtiste"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_8dp"
                app:cardElevation="@dimen/space_4dp"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artiste"
                        android:fontFamily="@font/circularstd_bold"
                        android:textColor="@color/blue_dark"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/text_size_xmedium"/>
                    <TextView
                        android:id="@+id/tv_Artiste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daly and the Gang"
                        android:fontFamily="@font/circularstd_book"
                        android:textColor="#E0353439"
                        android:textSize="@dimen/text_size_medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/space_4dp"
                android:layout_margin="@dimen/space_8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circularstd_bold"
                        android:textColor="@color/blue_dark"
                        android:layout_margin="8dp"
                        android:text="Description"
                        android:textSize="@dimen/text_size_xmedium"/>
                    <TextView
                        android:linksClickable="true"
                        android:id="@+id/tv_description_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="bienvenue dans notre club de motard"
                        android:textColor="#E0353439"
                        android:fontFamily="@font/circularstd_book"
                        android:textSize="@dimen/text_size_medium"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_margin="@dimen/space_8dp"
                android:src="@drawable/img1"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="250dp"/>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/card_Offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/space_4dp"
                android:layout_margin="@dimen/space_8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offre"
                        android:fontFamily="@font/circularstd_bold"
                        android:textColor="@color/blue_dark"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/text_size_xmedium"/>
                    <TextView
                        android:id="@+id/tv_Offre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aux amateurs de JAZZ! ce samedi au #JOBI venez tranquille écoutez du #JAZZ et sirotez votre vin! \nDeux biéres achetées la troisiéme est gratuite alors préparez vous pur une soirée arrosée avec vos potes, de quoi féter..."
                        android:layout_margin="8dp"
                        android:textColor="#E0353439"
                        android:fontFamily="@font/circularstd_book"
                        android:textSize="@dimen/text_size_medium"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </FrameLayout>
</ScrollView>