<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_8dp"
        android:layout_marginHorizontal="@dimen/space_4dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/space_4dp"
        card_view:cardElevation="@dimen/space_4dp"
        card_view:cardUseCompatPadding="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginHorizontal="@dimen/space_8dp"
                    android:layout_marginTop="@dimen/space_8dp"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/space_6dp"
                        app:cardCornerRadius="5dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardElevation="@dimen/space_4dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/circularstd_black"
                                android:text="30"
                                android:textAllCaps="true"
                                android:textColor="@color/blue_dark"
                                android:textSize="@dimen/text_size_xmedium" />

                            <TextView
                                android:id="@+id/tv_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularstd_book"
                                android:text="sep"
                                android:textAllCaps="true"
                                android:textColor="#F66B6B"
                                android:textSize="@dimen/text_size_medium" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/space_8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="2dp"
                            android:fontFamily="@font/circularstd_black"
                            android:maxLines="1"
                            android:text="La revancha del tango"
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/text_size_mediumx" />

                        <TextView
                            android:id="@+id/tv_time_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="2dp"
                            android:fontFamily="@font/circularstd_book"
                            android:text="De 20:30 À 21:00"
                            android:textColor="@color/text_mini_title"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/nbr_participe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="2dp"
                            android:fontFamily="@font/circularstd_book"
                            android:text="65 participants"
                            android:textColor="@color/text_mini_title"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="@dimen/space_8dp"
                    android:background="@color/text_mini_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/btn_participe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/img_participe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/participer_inactif" />

                            <TextView
                                android:id="@+id/tv_participer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_4dp"
                                android:fontFamily="@font/circularstd_bold"
                                android:text="participer"
                                android:textAllCaps="true"
                                android:textColor="@color/blue_dark"
                                android:textSize="@dimen/text_size_xmedium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FC6076"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/btn_reserve"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_login"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/img_reserve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/reserver_state_one" />

                            <TextView
                                android:id="@+id/tv_reserver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/space_4dp"
                                android:fontFamily="@font/circularstd_bold"
                                android:text="réserver"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_xmedium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/space_3dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        card_view:cardCornerRadius="@dimen/space_4dp"
                        card_view:cardElevation="0dp"
                        card_view:cardUseCompatPadding="false">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/bg_card"
                            android:scaleType="centerCrop"
                            />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/space_2dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/bold"
                            android:maxLines="2"
                            android:text="Soiree Dj Doggy..............."
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tv_date_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:ellipsize="end"
                            android:fontFamily="@font/italic"
                            android:singleLine="true"
                            android:text="7 oct at 6:30nnnnnnnnnnn"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_xsmallx"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_description_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/space_8dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular"
                            android:maxLines="3"

                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/card_image_a"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>